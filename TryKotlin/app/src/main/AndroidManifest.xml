<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.code.trykotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="my.code.trykotlin.business.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="my.code.trykotlin.business.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.ScanBarcodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.InputNewPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.RobotInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.InputCodeByHandActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="my.code.trykotlin.business.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="my.code.trykotlin.business.LoadingProcessRobotInfoActivity"
            android:theme="@style/CustomDialogStyle" />

        <activity
            android:name="my.code.trykotlin.business.EtDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomDialogStyle" />

    </application>

</manifest>