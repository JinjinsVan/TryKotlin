<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_robot_unqualified_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="列表项："
                android:textColor="@color/text_secondary_black"
                android:textSize="@dimen/text_secondary_title" />

            <TextView
                android:id="@+id/tv_robot_unqualified_items_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_robot_unqualified_items"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/tv_robot_unqualified_items"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_secondary_title" />

            <Button
                android:id="@+id/btn_start_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_btn_blue"
                android:text="Do sth."
                android:textColor="@color/white"
                android:textSize="@dimen/text_secondary_title" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
