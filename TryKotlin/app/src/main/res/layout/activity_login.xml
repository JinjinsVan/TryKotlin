<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_bg" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_white_round_rect">


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_et_round_corner"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="8dp"
            android:hint="账号"
            android:padding="8dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_username"
            android:layout_marginHorizontal="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_et_round_corner"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="8dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_forgot_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_password"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:padding="8dp"
            android:text="找回密码" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forgot_psw"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_btn_blue"
            android:enabled="false"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_secondary_title" />
    </RelativeLayout>


</FrameLayout>
